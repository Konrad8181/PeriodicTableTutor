@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <div id="index_title">
        <p class="large_font">Periodic Table</p>
        <div>
            <p style="margin-bottom:1cm;"></p>
        </div>
        <p class="small_font">Mendeleev's Periodic Table of Elements</p>
    </div> 
</div>

<div id="gridFlatContainer"> 
    @foreach (var element in Model)
    {
        <div class=@(String.Format("col-md-2-cell cell-{0}", @element.Index)) id="flatElementButton">
            <a href="@Url.Action("SpecificElements", "Elements", new { type = @element.Type })" style="text-decoration:none; color: Black;">
                <div>
                    <span id="mainText">@element.ShortName</span>
                    <div class=@element.Type></div>
                    <span id="subText">@element.Description</span>
                </div>
            </a>
        </div>
    } 
</div>


<form method="get" action="/Elements/SearchElements"> 
    <td>
        <input class="form-control" type="text" placeholder="Search for..." name="SearchString" value="@ViewData["CurrentFilter"]" aria-label="Search" aria-describedby="btnNavbarSearch" />
    </td>
    <td>
        <input type="submit" value="Search" class="btn btn-primary" />
    </td>
</form>

<div id="Footer">
    <p style="margin: 5px 10px 0px 10px">Konrad Zareba - 2024 </p>
</div>